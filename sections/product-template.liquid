{%- comment -%} /sections/product-template {%- endcomment -%}

{%- assign bg_color = section.settings.bg_color -%}

{%- if bg_color != 'rgba(0,0,0,0)' and bg_color != '' -%}
	{%- style -%}
		#ProductTemplate--product-template { background: {{ bg_color }}; }
		.shop-pay-terms { --payment-terms-background-color: {{ bg_color }} }
	{%- endstyle -%}
{%- endif -%}

<section id="ProductTemplate--{{ section.id }}"
	class="product-single"
	data-section-type="product-template"
	data-section-id="{{ section.id }}"
	data-store-availability="{{ section.settings.enable_store_availability }}">
	<div class="wrapper">
		{%- render 'product' product: product, section: section, enable_payment_button: section.settings.enable_payment_button, unique: section.id -%}
	</div>
</section>

