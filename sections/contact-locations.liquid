{%- comment -%} /sections/contact-locations.liquid {%- endcomment -%}

{%- if section.settings.show_section -%}
	<div data-section-id="{{ section.id }}" data-section-type="locations">
		{%- render 'locations' -%}
	</div>
{%- endif -%}

{% comment %} Schema {% endcomment %}
{% schema %}
	{
		"name": "Locations",
		"class": "locations-section",
		"settings": [
			{
				"type": "checkbox",
				"id": "show_section",
				"label": "Show section",
				"default": false
			},
			{
				"type": "text",
				"id": "subheading",
				"label": "Subheading",
				"default": "Our stores"
			},
			{
				"type": "text",
				"id": "title",
				"label": "Heading",
				"default": "Locations & hours"
			},
			{
				"type": "header",
				"content": "Colors"
			},
			{
				"type": "color",
				"id": "bg_color",
				"label": "Background"
			}
		],
		"blocks": [
			{
				"name": "Locations",
				"type": "locations",
				"settings": [
					{
						"type": "text",
						"id": "title",
						"label": "Address:",
						"default": "566 Emerson Street Palo Alto, California"
					},
					{
						"type": "richtext",
						"id": "working_time",
						"label": "Working time:",
						"default": "<p>Mon - Fri: 8am - 5pm<\/p><p>Sat: Closed<\/p><p>Sun: Closed<\/p>"
					},
					{
						"type": "image_picker",
						"id": "image",
						"label": "Store image"
					}
				]
			}
		]
	}
{% endschema %}